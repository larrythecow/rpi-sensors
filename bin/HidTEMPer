BEGIN { push @INC, '/opt/rpi-sensors/lib' }

use strict;
use warnings;

use sensors;
use Munin::Plugin;

if (defined $ARGV[0] && $ARGV[0] eq 'autoconf') {
	if( !(HidTEMPer_temp() eq "U") ){
		print "yes\n";
		exit(0);
	} else {
		print "no\n";
		exit(1);
	}
}

if (defined $ARGV[0] && $ARGV[0] eq 'config') {
print <<EOM;
graph_title		HidTEMPer temperature
graph_args		--base 1000 -l 0
graph_info		This graph shows the HidTEMPer in degrees celsius. 
graph_category		sensors
graph_vlabel		temp in Â°C
HidTEMPer.label		HidTEMPer Temperature
HidTEMPer.warning	15.0:40.0
HidTEMPer.critical	10.0:30.0
EOM
exit(0);
}
else{
	print "HidTEMPer.value ", avgTemp(\&getHidTEMPer, "3", "4");;
}
