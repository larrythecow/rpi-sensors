BEGIN { push @INC, '/opt/rpi-sensors/lib' }

use strict;
use warnings;

use sensors;
use Munin::Plugin;

my $sensorID;
my $sensorName="dht11_";
my @temp;
my $fh;
my $storage;

if( !($0=~ m\dht11_(.*)\) ){
        die "unable to read ID of DHT11 from filename";
}
$sensorID = $1;

if (defined $ARGV[0] && $ARGV[0] eq 'autoconf') {
        if( !(getDHT11($sensorID) eq "U") ){
                print "yes\n";
                exit(0);
        } else {
                print "no\n";
                exit(1);
        }
}

if (defined $ARGV[0] && $ARGV[0] eq 'config') {
print <<EOM;
graph_title		humidity and temperature of DHT11 sensor $sensorID
graph_vlabel	°C and %
graph_category	sensors

temp.label		°C
temp.warning	15.0:20.0
temp.critical	10.0:30.0

humi.label		%
humi.warning	35.0:40.0
humi.critical	30.0:45.0
EOM
exit(0);
}
else{
        open ($fh, "</tmp/cron/$sensorName$sensorID") || die "cant open file /tmp/cron/$sensorName$sensorID: $!\n";
        $storage = <$fh>;
        close $fh;

        chomp($storage);
        @temp = split(' ', $storage);

        print "temp.value $temp[0]\n";
        print "humi.value $temp[1]\n";
}
